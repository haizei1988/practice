/* pages/over/over.wxss */

.head {
  margin-top: 30rpx;
  text-align: center;
}

.user_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.head>view:nth-child(2) {
  font-family: PingFang-SC-Bold;
  font-size: 36rpx;
  color: #36353a;
}

.head>view:nth-child(3) {
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #36353a;
  margin-bottom: 16rpx;
}

.head>view:nth-child(4) {
  font-family: PingFang-SC-Regular;
  font-size: 24rpx;
  color: #36353a;
}

.contents {
  margin-top: 20rpx;
}

.contents>view {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-family: PingFang-SC-Bold;
  font-size: 16px;
  color: #36353a;
  padding-left: 30rpx;
}

.contents>view:nth-of-type(odd) {
  background: #f5f5f5;
}

.contents>view:nth-of-type(even) {
  background: white;
}
.sort{
  display: flex;
  justify-content: space-around;
  margin-top:20rpx;

}
.sort text {
  font-family: PingFang-SC-Bold;
  font-size: 14px;
  color: #ff5745;
  display: block;
}

.sort>view {
  display: inline-block;
  text-align: center;
}

.sort .sort_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

